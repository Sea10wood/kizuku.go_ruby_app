<header class="page-header">
  <h3>🎲　Kizuku.go　🎲</h3>
</header>

<div class="content">
  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
</div>

<%= form_with(model: @post, remote: true, html: { class: 'fixed-bottom-form' }) do |form| %>
  <% if @post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="horizontal-form">
    <div class="form-group">
      <%= form.text_area :content , placeholder: "Gopher以外は書き込み厳禁ですよ"%>
    </div>
    <div class="form-submit">
  <%= button_tag(type: 'submit', class: 'btn-submit') do %>
    <%= image_tag 'send.png', alt: 'Send', class: 'send-icon' %>
  <% end %>
  </div>
  </div>
<% end %>
